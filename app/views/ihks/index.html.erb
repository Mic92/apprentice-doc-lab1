<h1><%= title %></h1>

<%= form_tag ihks_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "IHK finden", :name => nil %>
  </p>
<% end %>

<% m = method(:ihks_path) %>
<%= pagerViewStart(m) %>
<%= pagerViewPrev(m) %>
<%= pagerViewNext(m) %>
<%= pagerViewEnd(m) %>

<table class="main">
<tr class="main">
<th class="main">Name</th>
</tr>

<% @ihks.each do |ihk| %>
<tr class="main">
