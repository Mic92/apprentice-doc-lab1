<% if current_user.role.admin? %>
  <h1> Benutzer-Übersicht </h1>
<% elsif current_user.role.modify? %>
  <h1> Auszubildenden-Übersicht </h1>
<% end %>
<p>
<% if current_user.role.admin? %>
  <%= link_to 'Benutzer erstellen', new_user_path %>
<% elsif  current_user.role.modify? %>
  <%= link_to 'Auszubildenden erstellen', new_user_path %>
  <%= link_to 'Auszubildende verwalten', apprenticeships_path %>
<% end %>
</p>

<p>
<table>
  <tr>
    <th> Vorname </th>
    <th> Name </th>
    <% if current_user.role.admin? %>
      <th> Rechte-Profil </th>
      <th> </th>
    <% end %>
    
  </tr>
  
  <% @users.each do |u| %>

    <tr>
      
      <td class="center"><%= u.forename %></td>
      <td class="center"><%= u.name %></td>
      <% if current_user.role.admin? %>
        <td class="center"><%= u.role.name %>
      <% end %>
      <% if current_user.role.admin? || current_user.role.modify? %>
        <% if !u.deleted? %>
          <td><%= link_to 'Deaktivieren', user_path(u), :confirm => "Sind sie sicher?", :method => :delete %></td>
        <% else %>
          <td><%= link_to 'Aktivieren', user_path(u), :confirm => "Sind sie sicher?", :method => :delete %></td>
        <% end %>
      <% end %>
      
    </tr>
  <% end %>
</table>
</p>


