<%= form_tag jobs_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Job finden", :name => nil %>
  </p>
<% end %>

<h1><%= title %></h1>

<% m = method(:jobs_path) %>
<%= pagerViewStart(m) %>
<%= pagerViewPrev(m) %>
<%= pagerViewNext(m) %>
<%= pagerViewEnd(m) %>

<table class="main">
<tr class="main">
<th class="main">Name</th>
</tr>

<% @jobs.each do |job| %>
<tr class="main">
<td class="main"><%= job.name %></td>
<td class="main"><%= link_to 'Details', job, :class => 'main' %></td>
<td class="main"><%= link_to 'Bearbeiten', edit_job_path(job), :class => 'main' %></td>
