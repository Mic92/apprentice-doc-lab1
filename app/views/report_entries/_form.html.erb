<%= form_for [ @report, @entry ] do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= @entry.errors.count %> Fehler verhinderten die Erstellung dieses Eintrags:</h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label 'Anfangszeit:' %><br />
  <%= f.datetime_select :date %><br />
  <%= f.label 'Dauer:' %><br />
  <%= number_field_tag(:hours, @hours, :min => 0, :max => 24, :size => 2) %>
  <%= f.label 'Stunden, ' %>
  <%= number_field_tag(:minutes, @minutes, :min => 0, :max => 59, :size => 2) %>
  <%= f.label 'Minuten' %><br />
  <%= f.label 'Text:' %><br />
  <%= f.text_area :text, :rows => 5 %><br />
  <%= @entry.new_record? ? f.submit('Eintrag anlegen') : f.submit('Ã„nderungen speichern') %>
<% end %>
