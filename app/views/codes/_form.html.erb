<%= form_for(@code) do |f| %>
  <% if @code.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@code.errors.count, "error") %> verhinderte, dass dieser Code gespeichert werden konnte: :</h2>

      <ul>
      <% @code.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <label for="code_codegroup">Einteilung</label> <br />
  <select id="code_codegroup_id" name="code[codegroup]">
    <option value=<%= PrintReportsHelper::HOURLY %> 
    <% if @code.codegroup == PrintReportsHelper::HOURLY %> 
      selected="selected" 
    <% end %>  
    >Stündlich</option>
    <option value=<%= PrintReportsHelper::DAILY %>
    <% if @code.codegroup == PrintReportsHelper::DAILY %> 
      selected="selected" 
    <% end %>  
    >Täglich</option>
    <option value=<%= PrintReportsHelper::WEEKLY %>
    <% if @code.codegroup == PrintReportsHelper::WEEKLY %> 
      selected="selected" 
    <% end %>  
    >Wöchentlich</option>
  </select>
  <br />
  
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_area :code %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

